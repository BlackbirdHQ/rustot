{
    "Version": "2012-10-17",
    "Statement": [
      {
        "Effect": "Allow",
        "Action": [
          "iot:Connect"
        ],
        "Resource": "*"
      },
      {
        "Effect": "Allow",
        "Action": [
          "iot:Publish",
          "iot:Receive"
        ],
        "Resource": [
          "arn:aws:iot:eu-west-1:XXXXXXXXXXXX:topic/$aws/certificates/create/*",
          "arn:aws:iot:eu-west-1:XXXXXXXXXXXX:topic/$aws/provisioning-templates/provision_template_name/provision/*"
        ]
      },
      {
        "Effect": "Allow",
        "Action": "iot:Subscribe",
        "Resource": [
          "arn:aws:iot:eu-west-1:XXXXXXXXXXXX:topicfilter/$aws/certificates/create/*",
          "arn:aws:iot:eu-west-1:XXXXXXXXXXXX:topicfilter/$aws/provisioning-templates/provision_template_name/provision/*"
        ]
      }
    ]
  }